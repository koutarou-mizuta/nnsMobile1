            <Label Text="ＮＮＳ モバイルサービス" TextColor="White"
                    VerticalOptions="Center"
                    HorizontalOptions="CenterAndExpand" FontSize="Large"/>
            </StackLayout>
        
            <Label x:Name="lblKmfCd" Text="会員番号：0000000000"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" FontSize="Medium" Margin="0,20,0,0"/>

            <Image x:Name="imgBarCode" Source="barcode.jpg" 
                WidthRequest="200" HeightRequest="60" Margin="0,0,0,20"/>

            <Button x:Name="btnToRegist" Text="登録はこちら" TextColor="White" HeightRequest="56"
                BackgroundColor="DarkBlue" ContentLayout="left,10"
                BorderRadius="6" Margin="6">
            
                <Button.Image>
                    <OnPlatform x:TypeArguments="FileImageSource"
                        iOS="btn_mail.png"
                        Android="btn_mail.png"
                        WinPhone="Images/btn_mail.png" />
                </Button.Image>

            </Button>
          
                           
            <StackLayout  Orientation="Horizontal" BackgroundColor="#a8002f" Padding="6" >
                <Image Source="btn_mail.png" />
                <Button x:Name="btnMessage" Text="お知らせ リスト" TextColor="White" BackgroundColor="#a8002f"
                    HorizontalOptions="FillAndExpand" Clicked="btnMessage_Clicked">
                
                </Button>
            </StackLayout>
        
            <StackLayout  Orientation="Horizontal" BackgroundColor="#a8002f" Padding="6">
                <Image Source="btn_point.png" />
                <Button x:Name="btnPoint" Text="マイポイント" TextColor="White" BackgroundColor="#a8002f"
                    HorizontalOptions="FillAndExpand" Clicked="btnPoint_Clicked">
                </Button>
            </StackLayout>
                                
             <StackLayout  Orientation="Horizontal" BackgroundColor="#a8002f" Padding="6" >
                <Image Source="btn_Shopping.png" />
                <Button x:Name="btnOnlineShop" Text="オンラインショップ" TextColor="White" BackgroundColor="#a8002f"
                    HorizontalOptions="FillAndExpand">
                </Button>
            </StackLayout>
        
            <StackLayout  Orientation="Horizontal" BackgroundColor="#a8002f" Padding="6">
                <Image Source="btn_Shop.png" />

                <Button x:Name="btnShopInfo" Text="店舗情報" TextColor="White"
                    HorizontalOptions="FillAndExpand">
                </Button>
            </StackLayout>
       
            <StackLayout  Orientation="Horizontal" BackgroundColor="#a8002f" Padding="6">
                <Image Source="btn_blog.png" />

                <Button x:Name="btnBlog" Text="スタッフブログ" TextColor="White"
                    BackgroundColor="blue" HorizontalOptions="FillAndExpand">
                </Button>
            </StackLayout>
        
            
           
            
